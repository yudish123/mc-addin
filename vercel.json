{
    "builds": [
      {
        "src": "dist/**",
        "use": "@vercel/static"
      }
    ],
    "headers": [
      {
        "source": "/:path*",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "ALLOWALL"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors *;"
          }
        ]
      }
    ],
    "outputDirectory": "dist",
    "build": {
      "env": {
        "ENV": "production"
      },
      "commands": [
        "npm run build:env && npm run build"
      ]
    }
  }
  